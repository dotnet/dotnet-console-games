@using System
@using System.Diagnostics
@using Console = Website.Console<Website.Games.Hangman.Hangman>

@page "/Hangman"

<PageTitle>Hangman</PageTitle>

<h1>Hangman</h1>

<div class="console-window text-center my-3">
	<div class="d-inline-block bg-dark text-light border rounded p-2 text-start shadow">
		<pre class="console">
			<code>@Console.State</code>
		</pre>
	</div>
	<div>
		@for (char i = 'a'; i <= 'z'; i++)
		{
			char c = i;
			<button class="btn btn-primary" @onclick="() => { Console._inputBuffer.Enqueue(new ConsoleKeyInfo((char)c, ConsoleKey.A + (c - 'a'), false, false, false)); }">@c</button>
		}
		<button class="btn btn-primary" @onclick="() => { Console._inputBuffer.Enqueue(new ConsoleKeyInfo('\n', ConsoleKey.Enter, false, false, false)); }">Enter</button>
		<button class="btn btn-primary" @onclick="() => { Console._inputBuffer.Enqueue(new ConsoleKeyInfo('\0', ConsoleKey.Backspace, false, false, false)); }">Backspace</button>
	</div>
</div>

@code
{
	protected override void OnInitialized()
	{
		Console._refresh = StateHasChanged;
		InvokeAsync(Games.Hangman.Hangman.Run);
	}
}
